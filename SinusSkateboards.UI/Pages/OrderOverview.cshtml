@page
@model SinusSkateboards.UI.Pages.OrderOverviewModel
@{
}

<body style="background-image:none">

    <h1>Order overview</h1>

    <div class="container">
        <div class="row">
            <div class="col">
                <h5>Customer details:</h5>
                <h5>Name: @Model.Customer.Name</h5>
                <h5>Address: @Model.Customer.Address</h5>
                <h5>ZipCode: @Model.Customer.ZipCode</h5>
                <h5>City: @Model.Customer.City</h5>
                <h5>Phone number: @Model.Customer.PhoneNumber</h5>
            </div>
            <div class="col">
                <h5>Product details:</h5>

                @foreach (var product in IndexModel.ProductsAddedToCart)
                {
                    <img src="~/images/@product.Image" style="width:50px" />
                    <h5>Product number : @product.ArticleNumber</h5>
                    <h5>Title: @product.Title</h5>
                    <h5>Color: @product.Color</h5>
                    <h5>Price: @product.Price</h5>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <h4>Amount of products: @IndexModel.ProductsAddedToCart.Count(). Total price of @Model.TotalPrice SEK </h4>
    </div>

    <a asp-page="ConfirmationPage" asp-route-id="@Model.Customer.Id"> Click here to confirm order</a>


</body>
