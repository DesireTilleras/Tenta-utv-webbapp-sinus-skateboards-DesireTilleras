@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";


}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>

<script>
    function onlyOne(checkbox) {
        var checkboxes = document.getElementsByName('Category')
        checkboxes.forEach((item) => {
            if (item !== checkbox) item.checked = false
        })
    }
</script>

<body style=" background-image:url(images/BackgroundPic/GettyImages-946920306-d90d5ddbd62b4e72852fe5dc595d59bd.jpg); background-size:100%; background-repeat:no-repeat">

    <form method="post" class="example">
        <div class="container" style="width:800px;text-align:center">
            <div class="row">
                @foreach (var category in Model.CategoryList)
                {
                    <div class="col-md-2" style="padding-left:80px">
                        <div class="card" style="width:100px" >
                            <input type="checkbox" id="CategoryCap" name="Category" onclick="onlyOne(this)" value="@category.ToString()" />
                            <label for="CategoryCap" style="color:white">@category</label>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col" style="text-align:center">
                    <div class="row">  
                        <div class="col">
                            <input type="text" placeholder="Search.." name="search">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" asp-route-search="search" asp-route-category="Category"><i class="fa fa-search"></i></button>
                        </div>
                       
                    </div>
                </div>
            </div> 
        </div>
           

        <div class="container">
            <div class="row">
                @if (Model.MatchedProducts != null && Model.MatchedProducts.Any())
                {
                    @foreach (var product in Model.MatchedProducts)
                    {
                        <div class="col-md-4">
                            <div class="card">
                                <div class="col">
                                    <div class="row">
                                        <a style="background-color:transparent" asp-page="ProductOverview" asp-route-id="@product.Id"><img src="~/images/@product.Image" class="img-thumbnail" style="width:100px" /> </a>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <h3 style="color:white; width:300px">
                                            @product.Title
                                        </h3>
                                    </div>
                                    <div class="row">
                                        <h3 style="color:white">Price: @product.Price SEK</h3>
                                    </div>
                                    <div class="row">
                                        <input class="btn-primary" asp-page-handler="AddToCart" asp-route-id="@product.Id" type="submit" value="Add to cart!" />
                                    </div>
                                </div>
                            </div>

                        </div>


                    }

                }

            </div>
        </div>


    </form>

</body>



